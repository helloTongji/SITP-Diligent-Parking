<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pay_money"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/out"
    tools:context="com.OutCar.PayMoney">

    <Button
        android:text="一键支付"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/OutCarBtn"
        android:background="@drawable/btn_circle"
        android:shadowColor="#FF555555"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/MoneyNum"
        android:layout_alignEnd="@+id/MoneyNum" />

    <TextView
        android:text="当前费用为"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MoneyNum"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:layout_above="@+id/OutCarBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
