<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/activity_park_detail_display"
tools:context="com.example.admin.sitp_parkinglot.ParkDetailDisplay">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/parking_back"
        android:gravity="center"
        android:orientation="vertical">


        <com.example.admin.sitp_parkinglot.CircleImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/parking_head"

        />
        <!--app:civ_border_color="@color/colorPrimary"-->
        <!--app:civ_border_width="2dp"/>-->
        <TextView
            android:id="@+id/parking_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="停车场"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

    </LinearLayout>

    <!--用户名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_location"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parking_detail_address"
            android:text="这里是地址"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:alpha="0.5"
        android:background="@color/colorPrimary"/>


    <!--注册时间-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <!--剩余车位数量-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余大型车位"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parking_detail_left_count"
                android:text="未知"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>
        </LinearLayout>
        <!--总车位数量-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="110dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余中型车位"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parking_detail_total_count"
                android:text="未知"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>
        </LinearLayout>
        <!--免费时长-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="200dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余小型车位"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parking_detail_freetime"
                android:text="未知"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>
        </LinearLayout>
        <!--距离-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="290dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离(米)"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/parking_detail_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:alpha="0.5"
        android:background="@color/colorPrimary"/>

    <!--停车场合作情况-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/if_cooperation"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_if_cooperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:text="已合作停车场" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:alpha="0.5"
        android:background="@color/colorPrimary"/>
    <!--停车场共享情况-->
    <LinearLayout
        android:id="@+id/ll_if_sharing_judge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/if_sharing"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_if_sharing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未开通共享平台"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <Button
        android:text="预约服务"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Service"
        android:background="@drawable/btn_bg"
        android:textColor="@android:color/white"/>

</LinearLayout>
</ScrollView>